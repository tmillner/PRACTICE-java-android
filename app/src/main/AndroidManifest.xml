<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macbookpro.myapp">

    <uses-feature android:name="android.hardware.Camera" />
    <uses-feature android:name="android.hardware.camera2.*" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.macbookpro.myapp.MainActivity" />
        </activity>
        <activity
            android:name=".NewsFeed"
            android:label="@string/title_activity_news_feed" />
        <activity
            android:name=".IntentPool"
            android:label="@string/title_activity_intent_pool"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.macbookpro.myapp.MainActivity" />
        </activity>
        <activity
            android:name=".Frame_Example"
            android:label="@string/title_activity_frame__example" />
        <activity
            android:name=".MenusActivity"
            android:label="@string/title_activity_menus" />
        <activity
            android:name=".BasicStringList"
            android:label="@string/title_activity_basic_string_list" />
        <activity
            android:name=".CreaturesActivity"
            android:label="@string/title_activity_creatures" />
        <activity
            android:name=".BitmapActivity"
            android:label="@string/title_activity_bitmap" />
        <activity
            android:name=".MutliDeviceSupportActivityListActivity"
            android:label="@string/title_mutlidevicesupportactivity_list" />
        <activity
            android:name=".MutliDeviceSupportActivityDetailActivity"
            android:label="@string/title_mutlidevicesupportactivity_detail"
            android:parentActivityName=".MutliDeviceSupportActivityListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.macbookpro.myapp.MutliDeviceSupportActivityListActivity" />
        </activity>
        <activity
            android:name=".AnimationActivity"
            android:label="@string/title_activity_animation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".filesapp.NotesActivity"
            android:label="@string/title_activity_notes"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".filesapp.AddNoteActivity"
            android:label="@string/title_activity_add_note"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".filesapp.ExternalFileViewerActivity"
            android:label="@string/title_activity_external_file_viewer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cameraapp.CameraActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.macbookpro.myapp.MainActivity" />
        </activity>
        <activity
            android:name=".cameraapp.CameraAPIActivity"
            android:label="@string/title_activity_camera_api"></activity>
    </application>

</manifest>
